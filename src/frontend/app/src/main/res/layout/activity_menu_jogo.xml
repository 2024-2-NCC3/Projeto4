<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context="br.fecap.pi.quizzods.menuJogo">


    <TextView
        android:id="@+id/nomeJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="20dp"
        android:textSize="60sp"
        android:gravity="center"
        android:text="QuizzOds" />

    <ImageView
        android:id="@+id/logoJogo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/nomeJogo"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/btnJogar"
        android:layout_centerHorizontal="true"
        android:padding="13dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:backgroundTint="#c3f584"
        android:layout_below="@id/logoJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOGAR" />

    <Button
        android:id="@+id/btnCreditos"
        android:layout_centerHorizontal="true"
        android:padding="13dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:backgroundTint="#c3f584"
        android:layout_below="@id/btnJogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRÃ‰DITOS" />


</RelativeLayout>